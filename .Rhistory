bymedian <- reorder(df[,Cluster], dec*df[,value], median, na.rm = TRUE)
par(mar=c(10,6,6,6))
boxplot(df[,value]~bymedian,notch=FALSE,main=main,cex.main=1.5,cex.lab=1.5,
cex.axis=1.5,xlab='',
ylab='',boxwex=0.5,las=2)
mtext(value,side=2,line=4,cex=1.5)
stripchart(df[,value]~bymedian, vertical = TRUE, method = "jitter",
add = TRUE, pch = 20,cex=1.5,col='turquoise4')
dev.off()
return('Good Job')
}
